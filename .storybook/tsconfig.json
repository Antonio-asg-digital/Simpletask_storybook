{
  "extends": "../tsconfig.app.json", // Check this path carefully
  "compilerOptions": {
    "types": ["node"],
    "declaration": true,       // Enables the generation of .d.ts files
     // Ensures no JavaScript files are emitted
    "outDir": "./dist",
    "target": "es6"
  },
  "include": [
    "../src/**/*",
    "src/app/components/**/*", 
    "./**/*.ts"
  ],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/**/*.spec.ts"
  ]
}
